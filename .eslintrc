{
  "parser": "@babel/eslint-parser",
  "extends": ["standard", "standard-jsx", "standard-react", "eslint-config-prettier"],
  "plugins": ["react", "eslint-plugin-prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "off",

    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "bracketSpacing": false,
        "endOfLine": "auto",
        "htmlWhitespaceSensitivity": "css",
        "insertPragma": false,
        "jsxBracketSameLine": false,
        "jsxSingleQuote": false,
        "printWidth": 100,
        "proseWrap": "always",
        "quoteProps": "as-needed",
        "requirePragma": false,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false
      }
    ]
  }


}